<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane prefHeight="524.0" prefWidth="615.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="98.0" prefWidth="157.0" text="Files and directories to ignore in root of project. Seperate with a comma." wrapText="true" />
            <TextField prefHeight="100.0" prefWidth="515.0" promptText="Ignore" />
         </children>
      </HBox>
   </bottom>
   <center>
      <TextArea fx:id="outputLog" editable="false" prefHeight="200.0" prefWidth="200.0" promptText="Output" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <VBox alignment="CENTER_LEFT" prefHeight="495.0" prefWidth="129.0" spacing="20.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <Button fx:id="navDirectoryButton" mnemonicParsing="false" onAction="#getNavDirectory" text="Nav Directory" />
            <Button fx:id="footerDirectoryButton" mnemonicParsing="false" onAction="#getFooterDirectory" text="Footer Directory" />
            <Button fx:id="projectDirectoryButton" mnemonicParsing="false" onAction="#getPathDirectory" text="Project Directory" />
            <Button fx:id="compileButton" mnemonicParsing="false" onAction="#compile" text="Compile" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" text="Close" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <MenuItem mnemonicParsing="false" text="Delete" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
</BorderPane>
